# environment variables for okc app, as apache Env

# generated from node[:okc][:env]
<% node[:okcra][:env].each do |key, value| -%>
SetEnv <%= key %> "<%= value %>"
<% end -%>

# generated from application
SetEnv APP_NAME "<%= @application %>"
SetEnv OKC_STACK_NAME "<%= node[:opsworks][:stack][:name] %>"
SetEnv APP_DEPLOY_TIME "<%= Time.new %>"

# generated from @deploy[:database] values
SetEnv DB_HOST "<%= @deploy[:database]['host'] %>"
SetEnv DB_PORT "<%= @deploy[:database]['port'] || 5432 %>"
SetEnv DB_NAME "<%= @deploy[:database]['database'] %>"
SetEnv DB_USER "<%= @deploy[:database]['username'] %>"
SetEnv DB_PASSWORD "<%= @deploy[:database]['password'] %>"
SetEnv DB_TYPE "<%= @deploy[:database]['type'] %>"
SetEnv DB_SCHEMA "public"
